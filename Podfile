use_frameworks!

def common_pods
    pod 'Alamofire'
    pod 'AlamofireObjectMapper'

    pod 'BrightFutures'
    pod 'Result'
    pod 'Spine', :git => 'https://github.com/invliD/Spine.git', :branch => 'master'

    pod 'TSMarkdownParser'
end

target 'xikolo-ios' do
    platform :ios, '9.0'
    common_pods

end

target 'xikolo-iosTests' do
    platform :ios, '9.0'

end

target 'xikolo-iosUITests' do
    platform :ios, '9.0'

end

target 'xikolo-tvos' do
    platform :tvos, '9.0'
    common_pods

end

target 'xikolo-tvosUITests' do
    platform :tvos, '9.0'

end
